<%- include('partials/header'); -%>
<div class="container">
    <h3 class="center-align"><%= job ? 'Edit Job' : 'Create Job' %></h3>
    <form method="POST">
        <div class="input-field">
            <input type="text" name="title" value="<%= job ? job.title : '' %>" required>
            <label for="title">Job Title</label>
        </div>
        <div class="input-field">
            <textarea name="description" class="materialize-textarea" required><%= job ? job.description : '' %></textarea>
            <label for="description">Job Description</label>
        </div>
        <div class="input-field">
            <input type="text" name="requirements" value="<%= job ? job.requirements.join(',') : '' %>" required>
            <label for="requirements">Requirements (comma separated)</label>
        </div>
        <% if (job) { %>
        <div class="input-field">
            <input type="text" name="status" value="<%= job.status %>" required>
            <label for="status">Status</label>
        </div>
        <% } %>
        <div class="right-align">
            <button type="submit" class="btn"><%= job ? 'Update Job' : 'Create Job' %></button>
        </div>
    </form>
</div>
<%- include('partials/footer'); -%>
