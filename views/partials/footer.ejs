<!-- Script for real-time rating notification -->
<% if (session.user) { %>
<script>
    let socket = io();
    socket.emit('registerRatingNotification', "<%= session.user.email %>");
    socket.on('announcement', (msg) => {
        console.log('Announcement: ' + msg);
    });

    socket.on('ratingNotification', (emitData) => {
        if (emitData.message) {
            var toastHTML = `
                <div id="toast-section">
                    <span>${emitData.message}</span>
                    <a href="/profile" class="btn-flat toast-action">GO TO PROFILE</a>    
                </div>
            `;
            M.toast({html: toastHTML});
        }
    })

    const userId = "<%= session.user.id %>";
    socket.emit('register', userId);
    socket.on('task-notification', function(data) {
        alert(data.message);  // Display the notification message
    });

</script>
<% } %>

