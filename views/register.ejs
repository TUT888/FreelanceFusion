<%- include('partials/header'); -%>
<!-- main content: sign up page -->
<div class="text-center">
    <div class="row">
        <div class="col s12 m6 l4 offset-l4 offset-m3">
            <h4 class="center-align">Sign Up</h4>
            <form id="register-form" action="/register" method="POST">
                <div class="input-field col s12">
                    <i class="material-icons prefix">person</i>
                    <input id="username" type="text" name="username" class="validate" required>
                    <label for="username">Username</label>
                    <span class="helper-text" data-error="Invalid username" id="username-error"></span>
                </div>
                
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    <input id="email" type="email" name="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Invalid email format"></span>
                </div>

                <div class="input-field col s12">
                    <i class="material-icons prefix">lock</i>
                    <input id="password" type="password" name="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Password must be at least 8 characters long, contain at least one uppercase letter, one lowercase letter, one number, and one special character."></span>
                </div>

                <!-- User Type Selection using Dropdown -->
                <div class="input-field col s12">
    
                    <!-- <select name="userType" id="userType" required> -->
                    <select name="userType" id="userType" required onchange="console.log(this.value)">

                        <option value="" disabled selected>Choose your role</option>
                        <option value="client">Client</option>
                        <option value="freelancer">Freelancer</option>
                    </select>
                </div>

                <div class="input-field col s12">
                    <button type="submit" class="btn waves-effect waves-light">Register</button>
                </div>

                <div id="message"></div>
                
            </form>
        </div>
    </div>
</div>


<script>
    $(document).ready(function() {
        M.updateTextFields(); // Initialize Materialize text fields
        $('select').formSelect(); // Initialize Materialize select dropdown
    });
</script>

